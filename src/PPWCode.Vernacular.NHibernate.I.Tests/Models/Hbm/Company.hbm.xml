<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping
    xmlns="urn:nhibernate-mapping-2.2"
    assembly="PPWCode.Vernacular.NHibernate.I.Tests"
    namespace="PPWCode.Vernacular.NHibernate.I.Tests.Models"
    default-access="field.pascalcase-m-underscore">

    <class name="Company" dynamic-update="true">
        <id name="Id">
            <generator class="hilo" />
        </id>
        <version name="PersistenceVersion" generated="never" unsaved-value="0" />

        <property name="CreatedAt" update="false" />
        <property name="CreatedBy" length="128" update="false" />
        <property name="LastModifiedAt" insert="false" />
        <property name="LastModifiedBy" length="128" insert="false" />

        <property name="Name" length="128" not-null="true" />

        <set name="Identifications" inverse="true" cascade="all-delete-orphan">
            <key column="CompanyId" />
            <one-to-many class="CompanyIdentification" />
        </set>

        <one-to-one name="FailedCompany" cascade="all" />
    </class>

</hibernate-mapping>