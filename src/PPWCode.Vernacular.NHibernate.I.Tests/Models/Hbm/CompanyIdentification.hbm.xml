<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping
    xmlns="urn:nhibernate-mapping-2.2"
    assembly="PPWCode.Vernacular.NHibernate.I.Tests"
    namespace="PPWCode.Vernacular.NHibernate.I.Tests.Models"
    default-access="field.pascalcase-m-underscore">

    <class name="CompanyIdentification" dynamic-update="true">
        <id name="Id">
            <generator class="hilo" />
        </id>

        <property name="CreatedAt" update="false" />
        <property name="CreatedBy" length="128" update="false" />
        <property name="LastModifiedAt" insert="false" />
        <property name="LastModifiedBy" length="128" insert="false" />

        <property name="Identification" length="128" not-null="true" />
        <property name="Number" />

        <many-to-one name="Company" column="CompanyId" not-null="true" foreign-key="FK_Company" />
    </class>

</hibernate-mapping>